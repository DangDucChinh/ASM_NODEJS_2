<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/staff-info.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <% if(isAdmin){ %>
                <div>
                    <hr>
                    <h4>Chỉnh sửa ảnh cho admin : </h4>
                    <form action="/staff-info" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <i class="fa fa-picture-o"><input type="file" name="image"
                                id="image" />
                        </i>
                        <button type="submit">Chỉnh sửa</button>
                    </form>
                    <hr>
                </div>
                <div class="centered">
                    <h4>Đổi mật khẩu cho admin : </h4>
                    <a href="/reset">Reset Password</a>
                </div>
                <% for (let staff of staffs) { %>
                    <hr>
                    <main>
                        <div class="fluid">
                            <div class="row">
                                <div class="col-xs-12 col-md-4">
                                    <div class="grid">
                                        <article class="card product-item">
                                            <div class="card__image">
                                                <img src="/<%= staff.image %>" alt="<%= staff.name %>">
                                            </div>
                                        </article>
                                    </div>
                                </div>

                                <div class="right card__actions col-xs-12 col-md-8">
                                    <div>
                                        <i class="fa fa-id-card">
                                            <span>
                                                <%= staff._id %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-user">
                                            <span>
                                                <%= staff.name %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-birthday-cake">
                                            <span>
                                                <%= staff.doB.getFullYear() + "/" + staff.doB.getMonth() + "/" +
                                                    staff.doB.getDate() %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-money">
                                            <span>
                                                <%= staff.salaryScale %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar">
                                            <span>
                                                <%= staff.startDate.getFullYear() + "/" + staff.startDate.getMonth()
                                                    + "/" + staff.startDate.getDate() %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-tasks">
                                            <span>
                                                <%= staff.department %>
                                            </span>
                                        </i>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar">
                                            <span></span>
                                            <%= staff.annualLeave %>
                                        </i>
                                    </div>
                                    <!--  -->
                                </div>
                            </div>
                        </div>

                   

                    </main>
                    <hr>
                    <% } %>
                        <% }else { %>
                            <%- include('../includes/staff-info-one.ejs') %> 
                                <% } %>
                                    <%- include('../includes/end.ejs') %>