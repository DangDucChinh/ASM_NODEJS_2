<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
    <style>
        .active {
            color: green
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <%- include('../includes/nav-child.ejs') %>
                <div class="grid">
                    <article class="muster">
                        <div class="muster-head">
                            <h4>Tên Nhân Viên</h4>
                            <p><%= staffs.name %></p>
                        </div>
                        <% staffs.workTimes.forEach(staff => { %>
                        <hr>
                        <div>
                            <h5>Nơi Làm Việc</h5>
                            <p><%= staff.workPlace %></p>
                        </div>
                        <div>
                            <h5>Giờ bắt đầu</h5>
                            <p><%= staff.startTime.getDate() + "/" + (+staff.startTime.getMonth() + 1) + "/" + staff.startTime.getFullYear() + " " + staff.startTime.getHours() + ":" + staff.startTime.getMinutes() + ":" + staff.startTime.getSeconds() %></p>
                        </div>
                        <% }); %>
                    </article>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>